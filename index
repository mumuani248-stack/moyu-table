<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
    import { getDatabase, ref, push, onValue, update, remove } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";

    const firebaseConfig = {
        apiKey: "AIzaSyAV08lkRKtqclvDoju-cSmmN85fAM5fD-E",
        authDomain: "project1-efdf0.firebaseapp.com",
        projectId: "project1-efdf0",
        storageBucket: "project1-efdf0.firebasestorage.app",
        messagingSenderId: "667848051314",
        appId: "1:667848051314:web:f8ed8e50a13ced394250eb",
        measurementId: "G-5QPWW9CQ7H",
        databaseURL: "https://project1-efdf0-default-rtdb.asia-southeast1.firebasedatabase.app"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);
    const playersRef = ref(db, 'players');

    // 1. æ–°å¢çƒå“¡åˆ°é›²ç«¯
    document.getElementById('addBtn').onclick = () => {
        const name = document.getElementById('pName').value;
        const power = document.getElementById('pPower').value;
        const style = document.getElementById('pStyle').value;

        if (!name || !power || !style) {
            alert("è«‹å¡«å¯«æ‰€æœ‰æ¬„ä½");
            return;
        }

        push(playersRef, {
            name: name,
            power: power,
            style: style,
            team: 'pool'
        });

        document.getElementById('pName').value = '';
        document.getElementById('pPower').value = '';
        document.getElementById('pStyle').value = '';
    };

    // 2. ç›£è½é›²ç«¯è³‡æ–™
    onValue(playersRef, (snapshot) => {
        const data = snapshot.val();
        const containers = {
            pool: document.getElementById('pool'),
            team1: document.getElementById('team1'),
            team2: document.getElementById('team2')
        };
        
        Object.values(containers).forEach(c => c.innerHTML = '');
        
        let count = 0;
        for (let key in data) {
            count++;
            const p = data[key];
            const card = document.createElement('div');
            card.className = "card";
            card.draggable = true;
            card.id = key;
            
            // å»ºç«‹å¡ç‰‡å…§å®¹èˆ‡ç§»é™¤æŒ‰éˆ•
            card.innerHTML = `
                <button class="del-btn" title="ç§»é™¤åå–®">âœ•</button>
                <p class="name">${p.name}</p>
                <p>æˆ°åŠ›: ${p.power} | æµæ´¾: ${p.style}</p>
            `;
            
            // ç¶å®šåˆªé™¤äº‹ä»¶
            card.querySelector('.del-btn').onclick = (e) => {
                e.stopPropagation(); // é˜²æ­¢è§¸ç™¼æ‹–æ›³
                if(confirm(`ç¢ºå®šè¦ç§»é™¤ã€Œ${p.name}ã€å—ï¼Ÿ`)) {
                    remove(ref(db, `players/${key}`));
                }
            };
            
            card.ondragstart = (e) => e.dataTransfer.setData("text", e.target.id);
            
            if (containers[p.team]) {
                containers[p.team].appendChild(card);
            }
        }
        document.getElementById('countTip').innerText = `ç›®å‰äººæ•¸: ${count}/20`;
    });

    // 3. æ‹–æ›³æ”¾ç½®é‚è¼¯
    document.querySelectorAll('.column').forEach(col => {
        const list = col.querySelector('.item-list');
        list.ondragover = (e) => { e.preventDefault(); list.classList.add('drag-over'); };
        list.ondragleave = () => list.classList.remove('drag-over');
        list.ondrop = (e) => {
            e.preventDefault();
            list.classList.remove('drag-over');
            const playerId = e.dataTransfer.getData("text");
            const targetTeam = col.getAttribute('data-team');
            update(ref(db, `players/${playerId}`), { team: targetTeam });
        };
    });

    // 4. è¼¸å‡ºåŠŸèƒ½
    document.getElementById('exportBtn').onclick = () => {
        let result = "--- å¢¨é›¨ç¬™èŠ±ç™¾æ¥­é…ç½®çµæœ ---\n\n";
        const teams = { team1: 'ã€ä¸€éšŠã€‘', team2: 'ã€äºŒéšŠã€‘', pool: 'ã€å¾…åˆ†é…ã€‘' };
        
        for (let teamId in teams) {
            result += teams[teamId] + "\n";
            const cards = document.getElementById(teamId).getElementsByClassName('card');
            if (cards.length === 0) result += "(ç„¡)\n";
            for (let card of cards) {
                const name = card.querySelector('.name').innerText;
                const info = card.querySelectorAll('p')[1].innerText;
                result += `- ${name} (${info})\n`;
            }
            result += "\n";
        }
        const outputArea = document.getElementById('output');
        outputArea.value = result;
        outputArea.style.display = 'block';
        alert("è¼¸å‡ºå®Œæˆï¼Œè«‹åœ¨ç¶²é åº•éƒ¨è¤‡è£½çµæœï¼");
    };
</script>

